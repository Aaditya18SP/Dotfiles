! ## Scrollbar ##
XTerm*vt100.scrollBar: true
XTerm*vt100.rightScrollBar: true
XTerm*internalBorder: 20
XTerm*termName: xterm-256color

! Do not scroll when there is new input
! XTerm*scrollTtyOutput: false

! Scrolling by using Shift-PageUp / Shift-PageDown or mousewheel by default ##
! Lines of output you can scroll back over
XTerm*saveLines: 15000

! ## Select text ##
XTerm*highlightSelection: true
! Remove trailing spaces
XTerm*trimSelection: true

! Fonts 

XTerm*faceName: monospace
XTerm*faceSize: 20


! ## Keybindings ##
XTerm*vt100.translations: #override \n\
  Ctrl <Key>+: larger-vt-font() \n\
  Ctrl <Key>-: smaller-vt-font() \n\
  Ctrl <Key>0: set-vt-font(d) \n\
  Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>J: scroll-forw(1, line) \n\
  Ctrl Shift <Key>K: scroll-back(1, line) \n\



! Color Scheme
XTerm*background: #000000
XTerm*foreground: #ffffff

XTerm*disallowedWindowOps: 20,21,SetXprop
XTerm*allowWindowOps: false
